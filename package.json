{
  "name": "dco",
  "private": true,
  "version": "1.0.0",
  "description": "a GitHub App that enforces the DCO on Pull Requests",
  "author": "Brandon Keepers",
  "license": "ISC",
  "repository": "github:dcoapp/app",
  "scripts": {
    "start": "probot run ./index.js",
    "test": "jest --coverage",
    "posttest": "standard"
  },
  "engines": {
    "node": ">=14"
  },
  "dependencies": {
    "email-validator": "^2.0.3",
    "probot": "^12.1.1"
  },
  "devDependencies": {
    "jest": "^27.3.1",
    "nock": "^13.2.0",
    "smee-client": "^1.0.1",
    "standard": "^14.3.4"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  }
}
